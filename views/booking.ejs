<!DOCTYPE html>
<html>
  <head>
    <title>All Bookings</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <form class="container" action="/booking/update/<%= booking._id %>" method="post" id="form1">
        <div class="row mb-3">
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col"></th>
                    <th scope="col">Email</th>
                    <th scope="col">NumTickets</th>
                    <th scope="col">Team</th>
                    <th scope="col">Superhero</th>
                    <th scope="col">Payment</th>
                    <th scope="col">Edit</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                      <td>
                        <div class="form-check center">
                          <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                        </div>
                      </td>
                      <td scope="row"><%= booking.email %></td>
                      <td><%= booking.numTickets %></td>
                      <td><%= booking.team %></td>
                      <td><%= booking.superhero %></td>
                      <td><%= booking.payment %></td>
                      <td>
                        <div class="col">
                          <button type="submit" class="btn btn-success" form="form1" onclick="action1">update it</button>
                        </div>
                        <!-- <div class="col-6">
                          <button type="submit" class="btn btn-danger" form="form1" onclick="action1">delete it</button>
                        </div> -->
                      </td>
                  </tr>
                </tbody>
              </table>
            
        </div>
    </form>
    
  </body>
</html>
<script>
        document.addEventListener("DOMContentLoaded", function () {
          document.querySelector("option[value='<%= booking.team %>']").selected = true;
          teamSelected('<%= booking.team %>')
          document.querySelector("option[value='<%= booking.superhero %>']").selected = true;
          document.querySelector("input[value='<%= booking.payment %>']").checked = true;
          document.querySelector("#gridCheck1").checked = "<%= booking.terms %>" == "true";
      });
</script>